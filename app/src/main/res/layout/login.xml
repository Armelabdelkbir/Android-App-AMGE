<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">
    <ImageView
        android:layout_width="315.33dp"
        android:layout_height="185dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18.0dp"
        android:background="@drawable/logo"
        android:id="@+id/imageView" />
    <EditText
        android:id="@+id/user1"
        android:paddingLeft="50dp"
        android:hint="identifiant"
        android:textColorHint="#ffffff"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="312.00dp"
        android:layout_height="57.33dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:background="@drawable/usernamelog" />
    <EditText
        android:id="@+id/mdp1"
        android:paddingLeft="50dp"
        android:hint="mot de passe"
        android:textColorHint="#ffffff"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="312.00dp"
        android:layout_height="57.33dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="292dp"
        android:background="@drawable/passlog"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/oublie"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="307dp"
        android:layout_marginLeft="300dp"
        android:background="@drawable/mdpoubl"
        android:onClick="checkLogin"

        />
    <Button
        android:layout_width="312dp"
        android:layout_height="57dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:background="@drawable/entrer"
        android:onClick="checkLogin"
        android:id="@+id/button" />

    <TextView
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@android:color/holo_red_light"
        android:text="Inscrivez-vous"

        android:textStyle="bold"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:onClick="registration"/>

    
</RelativeLayout>
