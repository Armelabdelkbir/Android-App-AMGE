<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bggg">
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L’AMGE Toulouse est une association des étudiants Marocains en Grandes Ecoles et universités de Toulouse.
Elle a pour but d’accompagner les étudiants  marocains avant, pendant et après leur passage
à Toulouse."
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:textStyle="italic"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/RegP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REJOIGNEZ NOUS !"
        android:background="@android:color/transparent"
        android:textColor="@android:color/holo_blue_light"

        android:layout_below="@+id/videoView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        />

    <Button
        android:id="@+id/vid"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:text=""
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/videoView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>