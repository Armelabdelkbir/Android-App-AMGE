<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bg">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/VOY"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="27 oct: Voyage Toussaint"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/VOY"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/voy"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/ORIO"
        android:text="18 nov: L’AMGE Toulouse Oriente"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/ORIO"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/orio"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <ImageButton
        android:id="@+id/DVP"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/dvp1"
        android:layout_marginTop="7dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/DVP"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="Conférence autour du Développement Personnel"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/PLUS4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:background="@android:color/transparent"
        android:text="Suivant"
        android:textColor="@android:color/holo_blue_light" />

    <Button
        android:id="@+id/Prec4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/PLUS4"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:background="@android:color/transparent"
        android:text="précédent"
        android:textColor="@android:color/holo_blue_light" />
</RelativeLayout>