<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">
    <ImageView
        android:layout_width="315.33dp"
        android:layout_height="185dp"
        android:background="@drawable/logo"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/nom_prenom"
        android:paddingLeft="50dp"
        android:hint="Nom et PrÃ©nom"
        android:textColorHint="#ffffff"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="312.00dp"
        android:layout_height="57.33dp"
        android:background="@drawable/username"
        android:layout_below="@+id/imageView2"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />
    <EditText
        android:id="@+id/email3"
        android:paddingLeft="50dp"
        android:hint="email"
        android:textColorHint="#ffffff"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="312.00dp"
        android:layout_height="57.33dp"
        android:background="@drawable/email"
        android:layout_below="@+id/nom_prenom"
        android:layout_alignLeft="@+id/nom_prenom"
        android:layout_alignStart="@+id/nom_prenom" />
    <EditText
        android:id="@+id/objet"
        android:paddingLeft="50dp"
        android:hint="Objet"
        android:textColorHint="@android:color/darker_gray"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="312.00dp"
        android:layout_height="57.33dp"
        android:background="@android:color/white"
        android:layout_below="@+id/email3"
        android:layout_alignLeft="@+id/email3"
        android:layout_alignStart="@+id/email3"
        android:layout_marginTop="10dp" />
    <EditText
        android:id="@+id/sujet"
        android:paddingLeft="50dp"
        android:hint="Text"
        android:textColorHint="@android:color/darker_gray"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="312.00dp"
        android:layout_height="120dp"
        android:background="@android:color/white"
        android:layout_above="@+id/env"
        android:layout_alignLeft="@+id/objet"
        android:layout_alignStart="@+id/objet" />
    <Button
        android:id="@+id/env"
        android:layout_width="312dp"
        android:layout_height="57dp"
        android:background="@drawable/sign3"
        android:onClick="OnReg"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/sujet"
        android:layout_alignEnd="@+id/sujet" />


</RelativeLayout>
